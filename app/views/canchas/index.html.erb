<h1>Listar canchas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Numero cancha</th>
      <th>Horario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @canchas.each do |cancha| %>
      <tr>
        <td><%= cancha.numero_cancha %></td>
        <td><%= cancha.horario %></td>
        <td><%= link_to 'Mostrar', cancha %></td>
        <td><%= link_to 'Editar', edit_cancha_path(cancha) %></td>
        <td><%= link_to 'Eliminar', cancha, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

