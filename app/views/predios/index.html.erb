<h1>Listar predios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Cantidad canchas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @predios.each do |predio| %>
      <tr>
        <td><%= predio.nombre %></td>
        <td><%= predio.telefono %></td>
        <td><%= predio.direccion %></td>
        <td><%= predio.cantidad_canchas %></td>
        <td><%= link_to 'Mostrar', predio %></td>
        <td><%= link_to 'Editar', edit_predio_path(predio) %></td>
        <td><%= link_to 'Eliminar', predio, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

